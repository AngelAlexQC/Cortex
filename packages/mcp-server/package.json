{
  "name": "@cortex/mcp-server",
  "version": "0.5.4",
  "description": "MCP server exposing Cortex memories to AI tools",
  "type": "module",
  "bin": {
    "cortex-mcp": "./dist/mcp-server.js"
  },
  "main": "./dist/mcp-server.js",
  "scripts": {
    "build": "bun build src/mcp-server.ts --outdir dist --target node --format esm",
    "dev": "bun run --watch src/mcp-server.ts",
    "start": "bun run dist/mcp-server.js",
    "typecheck": "bunx tsc --noEmit"
  },
  "keywords": [
    "mcp",
    "ai",
    "memory",
    "context",
    "claude",
    "copilot"
  ],
  "author": "EcuaByte <hello@ecuabyte.com> (https://github.com/EcuaByte-lat)",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/EcuaByte-lat/Cortex.git",
    "directory": "packages/mcp-server"
  },
  "dependencies": {
    "@cortex/core": "workspace:*",
    "@modelcontextprotocol/sdk": "^1.0.4"
  }
}
